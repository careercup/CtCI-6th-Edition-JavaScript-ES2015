  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "mocha",
      "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
      "stopOnEntry": false,
      "args": [
        "--no-timeouts",
        "--colors"
      ], //you can specify paths to specific tests here
      "cwd": "${workspaceRoot}",
      "env": {
        "NODE_ENV": "testing"
      }
    }
  ]
}